{
  "name": "node-grpc-typescript",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "build": "yarn run build:typescript",
    "build:typescript": "tsc -p .",
    "build:proto": "./compile-proto.sh",
    "watch": "yarn run build:typescript -- -w",
    "prewatch": "yarn run build:proto",
    "prebuild": "yarn run build:proto",
    "lint": "yarn run lint:prettier && yarn run lint:eslint",
    "lint:prettier": "prettier --check \"**/*.{ts,js,json,svg,md,yml}\"",
    "lint:eslint": "eslint . --ext .js,.ts",
    "lint:fix": "yarn run lint:fix:prettier && yarn run lint:eslint -- --fix",
    "lint:fix:prettier": "prettier --write '**/*.{ts,tsx,js,json,svg,md,yml}'",
    "start:server": "node server",
    "start:client": "node client"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@grpc/grpc-js": "^1.2.2",
    "google-protobuf": "^3.14.0"
  },
  "devDependencies": {
    "@tsconfig/node12": "^1.0.7",
    "@types/google-protobuf": "^3.7.4",
    "@types/node": "^14.14.14",
    "@typescript-eslint/eslint-plugin": "^4.10.0",
    "@typescript-eslint/parser": "^4.10.0",
    "eslint": "^7.15.0",
    "eslint-config-prettier": "^7.0.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^3.3.0",
    "grpc-tools": "^1.10.0",
    "prettier": "^2.2.1",
    "ts-protoc-gen": "^0.14.0",
    "typescript": "^4.1.3"
  },
  "eslintConfig": {
    "ignorePatterns": [
      "**/*.js",
      "proto/*.ts"
    ],
    "env": {
      "browser": false,
      "es6": true,
      "node": true
    },
    "parserOptions": {
      "project": "./tsconfig.json",
      "ecmaVersion": 2018,
      "sourceType": "module"
    },
    "extends": [
      "plugin:@typescript-eslint/recommended",
      "prettier/@typescript-eslint",
      "plugin:prettier/recommended"
    ]
  },
  "prettier": {
    "singleQuote": true,
    "tabWidth": 2,
    "printWidth": 80,
    "useTabs": false
  }
}
